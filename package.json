{
  "name": "@iml/logger",
  "version": "1.0.0",
  "description": "A logging utility. Compatible with bunyan-cli",
  "main": "source/logger.js",
  "scripts": {
    "test": "jest",
    "cover": "NODE_ENV=test npm t -- --coverage",
    "flow": "flow",
    "eslint": "eslint ./"
  },
  "pre-commit": [
    "flow",
    "eslint",
    "test"
  ],
  "jest": {
    "setupTestFrameworkScriptFile": "./setup-jasmine-env.js",
    "resetModules": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "./setup-jasmine-env.js",
      "test"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!@iml)/"
    ]
  },
  "publishConfig": {
    "registry": "https://ubit-artifactory-or.intel.com/artifactory/api/npm/iml-npm-local"
  },
  "repository": {
    "type": "git",
    "url": "git@github.intel.com:IML/logger.git"
  },
  "author": "IML Team",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "7.1.1",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "babel-plugin-transform-object-rest-spread": "6.23.0",
    "babel-preset-env": "1.1.10",
    "eslint": "3.16.1",
    "eslint-config-prettier": "1.4.0",
    "eslint-plugin-flowtype": "2.30.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-prettier": "2.0.1",
    "flow-bin": "0.40.0",
    "intel-flow-jasmine": "1.6.0",
    "intel-jasmine-n-matchers": "2.1.1",
    "jasmine-reporters": "2.2.0",
    "pre-commit": "1.2.2",
    "prettier": "0.19.0"
  },
  "dependencies": {
    "jest": "19.0.2"
  }
}
