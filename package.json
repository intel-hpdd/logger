{
  "name": "@iml/logger",
  "version": "1.0.2",
  "description": "A logging utility. Compatible with bunyan-cli",
  "main": "source/logger.js",
  "scripts": {
    "test": "jest",
    "cover": "NODE_ENV=test npm t -- --coverage",
    "flow": "flow",
    "eslint": "eslint ./"
  },
  "pre-commit": [
    "flow",
    "eslint",
    "test"
  ],
  "jest": {
    "resetModules": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "test"
