{
  "name": "@mfl/logger",
  "version": "1.0.0",
  "description": "A logging utility. Compatible with bunyan-cli",
  "main": "source/logger.js",
  "scripts": {
    "test": "jest",
    "cover": "NODE_ENV=test npm t -- --coverage",
    "flow": "flow",
    "eslint": "eslint ./"
  },
  "pre-commit": [
    "flow",
    "eslint",
    "test"
  ],
  "jest": {
    "resetModules": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "test"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!@mfl)/"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:intel-hpdd/logger.git"
  },
  "author": "MFL Team",
  "license": "MIT",
  "devDependencies": {
    "@mfl/flow-jasmine": "1.6.1",
    "@mfl/jasmine-n-matchers": "2.1.1",
    "babel-eslint": "7.2.3",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "babel-plugin-transform-object-rest-spread": "6.23.0",
    "babel-preset-env": "1.4.0",
    "eslint": "3.19.0",
    "eslint-config-prettier": "1.7.0",
    "eslint-plugin-flowtype": "2.32.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-prettier": "2.0.1",
    "flow-bin": "0.44.2",
    "jasmine-reporters": "2.2.1",
    "pre-commit": "1.2.2",
    "prettier": "1.2.2"
  },
  "dependencies": {
    "jest": "19.0.2"
  }
}
